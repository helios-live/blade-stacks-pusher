{
    "name": "ideatocode/blade-stacks-pusher",
    "description": "Push arbitrary content to laravel stacks from anywhere",
    "keywords": [
        "ideatocode",
        "laravel",
        "blade-stacks-pusher"
    ],
    "homepage": "https://github.com/ideatocode/blade-stacks-pusher",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandru Eftimie",
            "email": "alexandru@ideatocode.tech",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^8.73"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.10",
        "orchestra/testbench": "^6.22",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Ideatocode\\BladeStacksPusher\\": "src",
            "Ideatocode\\BladeStacksPusher\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ideatocode\\BladeStacksPusher\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ideatocode\\BladeStacksPusher\\BladeStacksPusherServiceProvider"
            ],
            "aliases": {
                "BladeStacksPusher": "Ideatocode\\BladeStacksPusher\\Facades\\BladeStacksPusher"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}